@using  SampleTrackingUi.ViewModels.SearchViewModels;
@model PatientLookupViewModel;

<form class="form-inline">
    <div class="panel panel-default">
        <div class="panel-heading">
            <h3 class="panel-title">Search</h3>
        </div>
        <div class="panel-body">
            <div class="form-group" style=" margin-left: 10px">
                @Html.LabelFor(m => Model.Sample.KbNumber, "KB:", new { @class = "control-label" })
                @Html.TextBoxFor(m => m.Sample.KbNumber, new { id = "kbNumber", type = "text", @class = "form-control input-sm", autofocus = "" })
            </div>
            <div class="form-group" style=" margin-left: 10px">
                @Html.LabelFor(m => Model.Sample.PatientName, "Patient Name:", new { @class = "control-label" })
                @Html.TextBoxFor(m => m.Sample.PatientName, new { id = "patientName", type = "text", @class = "form-control input-sm" })
            </div>
            <div class="form-group" style=" margin-left: 10px">
                <button type="submit" class="btn btn-primary">Search</button>
            </div>
        </div>
    </div>


    <div class="form-inline clearfix">
        <div style="margin-top: 3px;">

            @if (Model.Sample.PatientName != null)
            {
            <panel>
                <div>Patient Id: @Model.Sample.PatientId</div>
                <div>Patient Name: @Model.Sample.PatientName</div>
                <div>Sample: @Model.Sample.KbNumber</div>
                <div>Log Date: @Model.Sample.LogDateTime</div>
                <div>Sample Date: @Model.Sample.SampleDate</div>
            </panel>
            }
            else
                {
                    <div class="alert alert-warning" role="alert" style="margin-top: 7px">
                        Patient/Sample not found. <br />
                   </div>
                }
        </div>

    </div>


</form>