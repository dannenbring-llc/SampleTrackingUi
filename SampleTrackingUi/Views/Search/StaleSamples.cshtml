                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <h4>Tabular Results</h4>
                        </div>
                        <div class="panel">
                            <div class="panel-body">
                                <table class="table table-bordered table-hover table-striped text-center">
                                    <thead class="text-center">
                                        <tr class="small text-center">
                                            <th class="text-center">Tray</th>
                                            <th class="text-center">Sample</th>
                                            <th class="text-center">Aliquot</th>
                                            <th class="text-center">Patient</th>
                                            <th class="text-center">Log Date</th>
                                            <th class="text-center">Tray Location</th>
                                        </tr>
                                    </thead>

                                    <tbody>
                                        @foreach (var trayRow in Model.TrayMapData.OrderByDescending(tm => tm.LogDate))
                                        {
                                            <tr class="small text-center">

                                                <td>@trayRow.TrayDescription</td>
                                                <td>@trayRow.SampleId</td>
                                                <td>@trayRow.AliquotId</td>
                                                <td>@trayRow.PatientName</td>
                                                <td>@trayRow.LogDate.ToShortDateString()</td>
