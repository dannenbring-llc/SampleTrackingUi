@using  SampleTrackingUi.ViewModels.SearchViewModels;
@model FindByKbViewModel;

<form class="form-inline">
    <div class="panel panel-default">
        <div class="panel-heading">
            <h3 class="panel-title">Search</h3>
        </div>
        <div class="panel-body">
            <div class="form-group" style=" margin-left: 10px">
                @Html.LabelFor(m => Model.LogDate, "Log Date:", new { @class = "control-label" })
                @Html.TextBoxFor(m => m.LogDate, DateTime.Now.AddMonths(-6).ToString("yyyy-MM-dd"),  new { type = "date", @class = "form-control input-sm" })
            </div>
            <div class="form-group" style=" margin-left: 10px">
                <button type="submit" class="btn btn-primary">Search</button>
            </div>
        </div>
    </div>


    <div class="form-inline clearfix">
        <div style="margin-top: 3px;">

            @if (Model.SearchResults != null)
            {
                foreach (var trayResult in Model.SearchResults)
                {
                    <div class="panel-group">
                        <div class="panel panel-default">
                            <div class="panel-heading">
                                <ol class="breadcrumb">
                                    <li>
                                        <b>
                                            <label class="control-label">Freezer:</label>
                                            @*                                            @Html.TextBoxFor(m => m.ScanData.ScanDetails.First(), new { id = "trayName", type = "text", @class = "form-control input-sm" })*@
                                            @trayResult.FreezerId.ToString()
                                        </b>
                                    </li>
                                    <li><b>Drawer: @trayResult.DrawerDescription</b></li>
                                    <li><b>Drawer Slot: @trayResult.DrawerSlot</b></li>
                                    <li><b>Tray: @trayResult.TrayDescription</b></li>
                                </ol>
                            </div>
                            <div class="panel">
                                <div class="panel-body">
                                    <table class="table table-bordered table-hover table-striped text-center">
                                        <thead class="text-center">
                                            <tr class="small text-center">
                                                <th class="text-center">Row</th>
                                                <th class="text-center">1</th>
                                                <th class="text-center">2</th>
                                                <th class="text-center">3</th>
                                                <th class="text-center">4</th>
                                                <th class="text-center">5</th>
                                                <th class="text-center">6</th>
                                                <th class="text-center">7</th>
                                                <th class="text-center">8</th>
                                                <th class="text-center">9</th>
                                                <th class="text-center">10</th>
                                                <th class="text-center">11</th>
                                                <th class="text-center">12</th>
                                            </tr>
                                        </thead>

                                        <tbody>
                                            @foreach (var item in trayResult.Trays)
                                            {
                                                <tr class="small text-center">
                                                    <td>@item.RowName</td>
                                                    @if (item.TrayColumn1.FindSampleId)
                                                    {
                                                        <td class="alert-success">
                                                            @item.TrayColumn1.Sample 
                                                            <br /> @item.TrayColumn1.Aliquot 
                                                        </td>
                                                    }
                                                    else
                                                    {
                                                        <td>@item.TrayColumn1.Sample <br /> @item.TrayColumn1.Aliquot</td>
                                                    }

                                                    @if (item.TrayColumn2.FindSampleId)
