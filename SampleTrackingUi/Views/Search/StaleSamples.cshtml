                                                    }

                                                    @if (item.TrayColumn12.FindSampleId)
                                                    {
                                                        <td class="alert-success">@item.TrayColumn12.Sample <br /> @item.TrayColumn12.Aliquot</td>
                                                    }
                                                    else
                                                    {
                                                        <td>@item.TrayColumn12.Sample <br /> @item.TrayColumn12.Aliquot</td>
                                                    }
                                                </tr>
                                            }
