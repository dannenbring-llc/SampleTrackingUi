                                                    {
                                                        <td>@item.TrayColumn2.Sample <br /> @item.TrayColumn2.Aliquot</td>
                                                    }

                                                    @if (item.TrayColumn3.FindSampleId)
                                                    {
                                                        <td class="alert-success">@item.TrayColumn3.Sample <br /> @item.TrayColumn3.Aliquot</td>
                                                    }
                                                    else
                                                    {
                                                        <td>@item.TrayColumn3.Sample <br /> @item.TrayColumn3.Aliquot</td>
                                                    }

                                                    @if (item.TrayColumn4.FindSampleId)
                                                    {
                                                        <td class="alert-success">@item.TrayColumn4.Sample <br /> @item.TrayColumn4.Aliquot</td>
                                                    }
                                                    else
                                                    {
                                                        <td>@item.TrayColumn4.Sample <br /> @item.TrayColumn4.Aliquot</td>
                                                    }

                                                    @if (item.TrayColumn5.FindSampleId)
                                                    {
                                                        <td class="alert-success">@item.TrayColumn5.Sample <br /> @item.TrayColumn5.Aliquot</td>
                                                    }
                                                    else
                                                    {
                                                        <td>@item.TrayColumn5.Sample <br /> @item.TrayColumn5.Aliquot</td>
                                                    }

                                                    @if (item.TrayColumn6.FindSampleId)
                                                    {
